// User Authentication
digraph {
	rankdir=TB size=8
	start [label=Start shape=ellipse]
	login [label="Display Login Form" shape=parallelogram]
	input [label="Input Email & Password" shape=parallelogram]
	query [label="Query Users table" shape=box]
	check_user [label="User Found?" shape=diamond]
	invalid_user [label="Show 'Invalid Email'" shape=box]
	check_pass [label="Correct Password?" shape=diamond]
	invalid_pass [label="Show 'Invalid Password'" shape=box]
	role [label="Set Session & Role" shape=box]
	hr [label="Go to HR Dashboard" shape=box]
	emp [label="Go to Employee View" shape=box]
	end [label=End shape=ellipse]
	start -> login [label=""]
	login -> input [label=""]
	input -> query [label=""]
	query -> check_user [label=""]
	check_user -> invalid_user [label=No]
	invalid_user -> end [label=""]
	check_user -> check_pass [label=Yes]
	check_pass -> invalid_pass [label=No]
	invalid_pass -> end [label=""]
	check_pass -> role [label=Yes]
	role -> hr [label="If HR"]
	role -> emp [label="If Employee"]
	hr -> end [label=""]
	emp -> end [label=""]
}
